@model JobApplication
@{
    ViewData["Title"] = "Index";
}
<style>
    .input-validation-error{
        border-color:red;
    }
</style>
<h1>Job Application</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form class="m-1 p-1" method="post">
    <div class="form-group">
        <label asp-for="Name">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </label>
    </div>
    <div class="form-group">
        <label asp-for="DOB">
            <input asp-for="DOB" class="form-control" />
            <span asp-validation-for="DOB" class="text-danger"></span>
        </label>
    </div>
    <div class="form-group">
        <label asp-for="Gender">
            <input asp-for="Gender" type="radio" value="M" />Male
            <input asp-for="Gender" type="radio" value="F" />Female
            <span asp-validation-for="Gender" class="text-danger"></span>
        </label>
    </div>
    <div class="form-group">
        <label asp-for="Experience"></label>
        <select asp-for="Experience" class="form-control">
            <option value="Select">Select Experience</option>
            <option value="0">Fresher</option>
            <option value="1">0-1 Years</option>
            <option value="2">1-2 Years</option>
            <option value="3">2-3 Years</option>
            <option value="4">3-4 Years</option>
            <option value="above">Above 5 Years</option>
        </select>
        <span asp-validation-for="Experience" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="TermsAccept" />
        <label asp-for="TermsAccept" class="form-check-label">
            I Accept Terms and Conditions
        </label>
        <span asp-validation-for="TermsAccept" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit Application</button>
</form>

